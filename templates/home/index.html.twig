{% extends "base.html.twig" %}

{% block title %}
    Accueil
{% endblock %}

{% block body %}

    <h1>
        bienvenue sur la page acceuil
    </h1>
    <div class="row">
        {% for article in articles %}
            <div class="card col-md-4" style="width: 18rem;">
                <div class="card-body">
                <a href = "/view/{{article.id}}">
                    <h5 class="card-title">
                        {{ article.title }}
                    </h5>
                    {% if article.Image starts with 'http' %}
                        <img style="max-width: 100%" src="{{article.image}}" alt="{{article.title}}"/>
                    {% else %}
                        <img style="max-width: 100%" src="assets/upload/images/{{article.Image}}" alt="{{article.title}}"/>
                    {% endif %}
                    <div class="card-text" style="max-height: 250px;
                     height: 250px;
                      white-space: nowrap;
                       overflow: hidden;
                        text-overflow: ellipsis;"> {{ article.content | raw}}</div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}