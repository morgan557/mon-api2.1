{% extends "base.html.twig" %}

{% block title %}
    Single Article
{% endblock %}

{% block body %}
    <h1>
        {{ article.title }}
    </h1>
    <div class="row">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">
                        {{ article.title }}
                    </h5>
                    {% if article.image starts with 'http' %}
                        <img style="max-width: 100%" src="{{article.image}}" alt="{{article.title}}"/>
                    {% else %}
                        <img style="max-width: 100%" src="/assets/upload/images/{{article.image}}" alt="{{article.title}}"/>
                    {% endif %}
                    <div class="card-text"> {{ article.content | raw}}</div>
                </div>
            </div>
    </div>
{% endblock %}
